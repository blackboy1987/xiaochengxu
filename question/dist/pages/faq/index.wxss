page {
    background: #eee;
}

.help {
    margin: 20rpx;
}

.help .help_item {
    margin: 20rpx auto;
    background: #fff;
    border-radius: 10rpx;
    overflow: hidden;
    padding: 10rpx 0;
}

.help .help_item .title {
    font-size: 30rpx;
    display: flex;
    color: #666;
}

.help .help_item .title .title_1 {
    width: 630rpx;
    line-height: 80rpx;
    padding-left: 30rpx;
    font-size: 28rpx;
}

.help .help_item .title .title_2 {
    width: 80rpx;
    height: 80rpx;
    text-align: center;
}

.help .help_item .title .title_2 image {
    width: 40rpx;
    height: 40rpx;
    margin: 20rpx auto;
}

.help .help_item .detail {
    margin-bottom: 20rpx;
    font-size: 28rpx;
    line-height: 50rpx;
    padding: 0 30rpx;
    color: #666;
}
