@import "./../../remax-styles.wxss";
page {
    color: #fff;
    overflow-x: hidden;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.wpaihang {
    margin: 20rpx auto 0;
    width: 90%;
}

.wtop {
    width: 500rpx;
    position: fixed;
    height: 70rpx;
    left: 60%;
    margin-left: -180rpx;
}

.wtitle1 {
    background-color: #ed5a5a;
    border-radius: 50rpx;
}

.wtitle1,.wtitle2 {
    text-align: center;
    padding: 20rpx 50rpx;
    font-size: 26rpx;
    width: 150rpx;
    margin: 0 auto;
    float: left;
}

.wtitle2 {
    background-color: #673ab7;
    border-top-right-radius: 30rpx;
    border-bottom-right-radius: 30rpx;
}

.wlist {
    height: 700rpx;
    background-color: hsla(0,0%,100%,.2);
    border-radius: 20rpx;
    padding-top: 100rpx;
    overflow-y: auto;
}

.wlist .witem {
    font-size: 36rpx;
    height: 130rpx;
    clear: both;
    margin: 10rpx;
}

.witem .img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    float: left;
    border: 2rpx solid #fff;
}

.witem .wid {
    width: 50rpx;
}

.witem .wid,.witem .wname {
    float: left;
    margin: 20rpx 30rpx;
}

.witem .wname {
    width: 200rpx;
    font-size: 34rpx;
}

.witem .wguansu {
    float: left;
    margin: 20rpx 0px;
}

.wad {
    padding: 20rpx;
}
