@import "./../../remax-styles.wxss";
page {
    color: #fff;
    overflow-x: hidden;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.wduihuanlist {
    overflow: hidden;
    margin: 20rpx 35rpx;
    padding-bottom: 95rpx;
}

.wdiuhuanitem {
    border-radius: 10rpx;
    background-color: #fff;
    height: 180rpx;
    color: #000;
    padding: 30rpx;
    margin: 20rpx 0;
    clear: both;
}

.wdiuhuanitem .img {
    float: left;
    width: 180rpx;
    height: 180rpx;
}

.wxiangqing {
    float: left;
    width: 400rpx;
    padding: 10rpx 0 0 30rpx;
}

.wxiangqing .wjiage {
    color: #ed380a;
    font-size: 32rpx;
    padding: 10rpx 0;
}

.wxiangqing .wjiage .wrejiage {
    color: #ed380a;
    font-size: 24rpx;
    text-decoration: line-through;
}

.wxiangqing .wshuliang {
    height: 48rpx;
    line-height: 48rpx;
    font-size: 24rpx;
}

.wshuliang .wgo {
    padding: 5rpx 20rpx;
    background-color: #f6502a;
    color: #fff;
    font-size: 23rpx;
    border-radius: 30rpx;
    float: right;
}

.vx-w365 {
    width: 90%;
    height: 90rpx;
    background-image: linear-gradient(-90deg,#705ade 1%,#a038fe);
    color: #fff;
    text-align: center;
    margin: 0 auto;
    line-height: 90rpx;
    border-radius: 50rpx;
}
