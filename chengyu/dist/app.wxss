.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

button {
  background: initial;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

page {
  background-image: linear-gradient(-180deg,#766ed7,#c28dc7 45%,#f8c3bd 79%,#fff);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.tunnel,.uploader,.userinfo {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 2rpx solid rgba(0,0,0,.1);
  border-right: none;
  border-left: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all .3s ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: #fff;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: #fff;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.tunnel,.uploader {
  height: auto;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}

.tunnel-text,.uploader-text {
  width: 100%;
  line-height: 104rpx;
  font-size: 34rpx;
  color: #007aff;
}

.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 2rpx solid rgba(0,0,0,.1);
}

.uploader-image {
  width: 100%;
  height: 360rpx;
}

.tunnel {
  padding: 0 0 0 40rpx;
}

.tunnel-text {
  position: relative;
  color: #222;
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-top: 2rpx solid rgba(0,0,0,.1);
}

.tunnel-text:first-child {
  border-top: none;
}

.tunnel-switch {
  position: absolute;
  right: 20rpx;
  top: -2rpx;
}

.disable {
  color: #888;
}

.service {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: linear-gradient(#007aff,#0063ce);
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,.3);
  display: flex;
  align-content: center;
  justify-content: center;
  transition: all .3s ease;
}

.service-button {
  position: absolute;
  top: 40rpx;
}

.service:active {
  box-shadow: none;
}

.request-text {
  padding: 20rpx 0;
  font-size: 24rpx;
  line-height: 36rpx;
  word-break: break-all;
}

.menus {
  -webkit-columns: 2;
  column-count: 2;
  color: #515151;
}

.menu {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 18rpx 0 24rpx;
}

.menu-point {
  display: block;
  background: #ff4e2f;
  border-radius: 50%;
  width: 20rpx;
  height: 20rpx;
  top: 4rpx;
  right: 0;
  position: absolute;
  border: 4rpx solid #fff;
}

.menu-redbag image {
  width: 46rpx;
  height: 56rpx;
  top: -16rpx;
  right: -20rpx;
  position: absolute;
  animation: move 3s 0s infinite;
  transform-origin: bottom;
}

@keyframes move {
  0%,65% {
    transform: rotate(6deg);
  }

  70% {
    transform: rotate(6deg);
  }

  75% {
    transform: rotate(-6deg);
  }

  80% {
    transform: rotate(6deg);
  }

  85% {
    transform: rotate(-6deg);
  }

  90% {
    transform: rotate(6deg);
  }

  95% {
    transform: rotate(-6deg);
  }

  100% {
    transform: rotate(6deg);
  }
}

@-webkit-keyframes move {
  0%,65% {
    transform: rotate(6deg);
  }

  70% {
    transform: rotate(6deg);
  }

  75% {
    transform: rotate(-6deg);
  }

  80% {
    transform: rotate(6deg);
  }

  85% {
    transform: rotate(-6deg);
  }

  90% {
    transform: rotate(6deg);
  }

  95% {
    transform: rotate(-6deg);
  }

  100% {
    transform: rotate(6deg);
  }
}

.menu-btn {
  background: #7d51e7;
  border-radius: 130rpx;
  color: #fff;
  padding: 10rpx;
  width: 100rpx;
  height: 100rpx;
  margin: -140rpx 20rpx 0 0;
  border: 10rpx solid #d4d2f8;
  font-size: 30rpx;
}

.menu-right {
  position: relative;
  left: 170rpx;
  width: 120rpx;
}

.menu-btn-money {
  background: #6560d4;
}

.menu-btn-text {
  width: 80rpx;
  margin: 8rpx 0 0 21rpx;
}

.menu-btn-money>.menu-btn-text {
  margin-top: 28rpx;
}

.menu-text {
  padding: 20rpx 0 0 30rpx;
}

.menu-money-title,.menu-power-title {
  font-size: 30rpx;
  color: #666;
}

.menu-power-num {
  color: #8849ee;
}

.menu-money-num,.menu-power-num {
  font-family: PingFangHK-Medium;
  font-size: 48rpx;
  letter-spacing: 0;
}

.menu-money-num {
  color: #f58b6f;
}

.w_button {
  animation: w_button .5s linear infinite alternate;
}

@-webkit-keyframes w_button {
  0% {
    -webkit-transform: scale(.95);
  }

  100% {
    -webkit-transform: scale(1.01);
  }
}

@keyframes w_button {
  0% {
    transform: scale(.95);
  }

  100% {
    transform: scale(1.01);
  }
}
